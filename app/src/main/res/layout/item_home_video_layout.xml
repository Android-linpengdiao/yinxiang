<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <com.yinxiang.view.FullScreenVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:focusable="false" />

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_media_play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/circle_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="舞林霸主"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_radius_theme"
                        android:gravity="center"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:text="关注"
                        android:textColor="#ffffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_report"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_radius_red"
                        android:gravity="center"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:text="举报"
                        android:textColor="#ffffffff"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="这就是街舞3比赛参赛作品参赛作品之爵士舞表演"
                    android:textColor="#ffe6e6e6"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="发布于1天前"
                    android:textColor="#ffe6e6e6"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_works_pk"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/pk" />

                <ImageView
                    android:id="@+id/iv_relay"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/jieli" />

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/like" />

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/xiaoxi" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/forwardfill" />

                <TextView
                    android:id="@+id/tv_election"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:drawableTop="@drawable/toupiao"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="100w"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>